            else{
                alert("Wrong ! You lose");
                for(var i=0;i<size;i++)
                    $("#"+num[i]).css("background-color","red");
                //$('.ans').prop('disabled', true);
                $("#temp").show();
                $("#quiz").hide();
            }
        }),
        $("#reset").click(function(){
            reset();
